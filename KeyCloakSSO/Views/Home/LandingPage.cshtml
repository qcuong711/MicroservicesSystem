@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="row w-100">
        <div class="col-md-8 col-lg-6 mx-auto">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="fas fa-shield-alt fa-4x text-primary mb-3"></i>
                        <h1 class="display-4 fw-bold text-dark mb-3">Hệ Thống SSO</h1>
                        <p class="lead text-muted">
                            Đăng nhập một lần, truy cập mọi nơi với KeyCloak
                        </p>
                    </div>
                    
                    <div class="mb-4">
                        <div class="row text-center">
                            <div class="col-4">
                                <i class="fas fa-lock fa-2x text-success mb-2"></i>
                                <h6 class="text-muted">Bảo Mật</h6>
                            </div>
                            <div class="col-4">
                                <i class="fas fa-users fa-2x text-info mb-2"></i>
                                <h6 class="text-muted">Đơn Giản</h6>
                            </div>
                            <div class="col-4">
                                <i class="fas fa-rocket fa-2x text-warning mb-2"></i>
                                <h6 class="text-muted">Nhanh Chóng</h6>
                            </div>
                        </div>
                    </div>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            Bạn đã đăng nhập! Chuyển đến Dashboard.
                        </div>
                        <a asp-action="Dashboard" class="btn btn-success btn-lg px-5 py-3">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Vào Dashboard
                        </a>
                    }
                    else
                    {
                        <div class="d-grid gap-2">
                            <a asp-action="DangNhap" class="btn btn-primary btn-lg px-5 py-3">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Đăng Nhập với KeyCloak
                            </a>
                        </div>
                        
                        <div class="mt-4">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Sử dụng tài khoản KeyCloak để đăng nhập vào hệ thống
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
} 