@model KeyCloakSSO.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- Header Dashboard -->
    <div class="row bg-primary text-white py-4 mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        Dashboard
                    </h2>
                    <p class="mb-0 opacity-75">Bảng điều khiển hệ thống</p>
                </div>
                <div>
                    <a asp-action="DangXuat" class="btn btn-outline-light">
                        <i class="fas fa-sign-out-alt me-2"></i>
                        Đăng Xuất
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Thông tin người dùng -->
    <div class="row mb-4">
        <div class="col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-4x text-primary"></i>
                    </div>
                    <h4 class="text-dark mb-2">@Model.ChaoMung</h4>
                    <p class="text-muted mb-3">
                        <i class="fas fa-envelope me-1"></i>
                        @Model.Email
                    </p>
                    <small class="text-muted">
                        <i class="fas fa-clock me-1"></i>
                        Đăng nhập lúc: @Model.ThoiGianDangNhap.ToString("dd/MM/yyyy HH:mm:ss")
                    </small>
                </div>
            </div>
        </div>

        <!-- Thống kê -->
        <div class="col-md-6 col-lg-8">
            <div class="row">
                <div class="col-sm-6 col-lg-3 mb-3">
                    <div class="card border-0 shadow-sm bg-success text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-check-circle fa-2x mb-2"></i>
                            <h5>Trạng Thái</h5>
                            <p class="mb-0">Đã Đăng Nhập</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3 mb-3">
                    <div class="card border-0 shadow-sm bg-info text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-shield-alt fa-2x mb-2"></i>
                            <h5>Bảo Mật</h5>
                            <p class="mb-0">KeyCloak SSO</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3 mb-3">
                    <div class="card border-0 shadow-sm bg-warning text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-apps fa-2x mb-2"></i>
                            <h5>Ứng Dụng</h5>
                            <p class="mb-0">Tích Hợp SSO</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3 mb-3">
                    <div class="card border-0 shadow-sm bg-secondary text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-clock fa-2x mb-2"></i>
                            <h5>Phiên</h5>
                            <p class="mb-0">Đang Hoạt Động</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Nội dung chính -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Thông Tin Hệ Thống
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Về Hệ Thống SSO</h6>
                            <p class="text-muted">
                                Hệ thống Single Sign-On (SSO) cho phép bạn đăng nhập một lần và truy cập 
                                nhiều ứng dụng khác nhau mà không cần đăng nhập lại.
                            </p>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success me-2"></i>Bảo mật cao với KeyCloak</li>
                                <li><i class="fas fa-check text-success me-2"></i>Đăng nhập một lần</li>
                                <li><i class="fas fa-check text-success me-2"></i>Quản lý phiên tập trung</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Tính Năng</h6>
                            <div class="list-group list-group-flush">
                                <div class="list-group-item border-0 px-0">
                                    <i class="fas fa-users text-info me-2"></i>
                                    Quản lý người dùng
                                </div>
                                <div class="list-group-item border-0 px-0">
                                    <i class="fas fa-key text-warning me-2"></i>
                                    Xác thực tập trung
                                </div>
                                <div class="list-group-item border-0 px-0">
                                    <i class="fas fa-cogs text-secondary me-2"></i>
                                    Cấu hình linh hoạt
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
} 